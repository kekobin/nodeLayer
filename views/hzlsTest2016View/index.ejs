<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="edge" >
  <title>虎泽拉斯传说</title>
</head>
<link rel="stylesheet" href="../../hzlsTest2016/css/index.css">
<script src="http://assets.dwstatic.com/common/js/jquery.js"></script>
<script src="http://hd.huya.com/starRoad/js/lib/jquery.nicescroll.min.js"></script>
<body>
  <!-- header -->
  <script src="http://assets.dwstatic.com/amkit/p/duya/live2/js/header_lg.js" data-fixed="true"></script>
  <!-- 顶部栏 -->
  <div class="header_bg">
    <div class="header_main">
      <div class="nav">
        <a href="javascript:void(0);" id="lists" class="on"></a>
        <a href="javascript:void(0);" id="rule"></a>
      </div>
    </div>
  </div>
  <!-- 01战场永不停歇 -->
  <div class="list_bg">
    <div class="list_inner" style="padding-top: 243px;">
      <div class="list_main">
        <ul id="list_ul" style="margin-top:0;">
          <%- include template/tpl1 %>
        </ul>
      </div>
    </div>
  </div>
  <!-- 02虎泽拉斯最强战队 -->
  <div class="show_bg">
    <div class="show_inner">
      <!-- 我的战队 -->
      <a id="my_team" href="javascript:void(0);">我的战队</a>
      <!-- 排名 -->
      <div class="team_top">
        <span class="top_1">排名</span>
        <span class="top_2">战队名称</span>
        <span class="top_3">战绩</span>
        <span class="top_4">战队成员</span>
        <span class="top_5">操作</span>
      </div>
      <div class="team_main">
        <ul id="team_result" class="result">
          <%- include template/tpl2 %>
        </ul>
        <div class="page <%= data1.total < 8 ? 'hide': ''%>">
          <div id="strongest_team_page" class="pages">
            
          </div>
          <div class="page_go">
            <span>到第</span>
            <input type="text" id="page_num">
            <span>页</span>
            <a href="javascript:void(0);" id="sure_page">确定</a>
          </div>
        </div>
        <div class="search">
          <div class="search_l">
            <span><input type="checkbox" id="not_enough" data-queryCond="8">未满员</span>
            <span><input type="checkbox" id="not_tds" data-queryCond="1">缺投弹手</span>
            <span><input type="checkbox" id="not_mfs" data-queryCond="2">缺法师</span>
            <span><input type="checkbox" id="not_ms" data-queryCond="4">缺牧师</span>
          </div>
          <div class="search_r">
            <label for="">战队名称：
              <input type="text" id="team_name_input">
            </label>
            <label for="">队长名称：
              <input type="text" id="leader_name_input">
            </label>
            <a href="javascript:void(0);" id="sure_search">搜索</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 03虎泽拉斯最强英雄 -->
  <div class="hero_bg">
    <div class="hero_inner">
      <!-- 我的角色 -->
      <a id="my_role" href="javascript:void(0);">我的角色</a>
      <div class="hero_main">
        <div class="hero_top" id="must">
          <span class="top_1 hover" data-title="must_tds"></span>
          <span class="top_2" data-title="must_mfs"></span>
          <span class="top_3" data-title="must_ms"></span>
        </div>
        <!-- 标题 -->
        <div class="title_top">
          <span class="top_1">排名</span>
          <span class="top_2">主播</span>
          <span class="top_3">等级</span>
          <span class="top_4" id="role_technogy">攻击力</span>
          <span class="top_5">所属战队</span>
        </div>
        <div class="hero_over">
          <!-- 榜单: 最强投弹手-->
          <ul class="result" id="must_tds">
            <%
              var data = data2.data;
              for(var i=0;i<data.bomberRankList.length;i++) {
                var value = data.bomberRankList[i];
            %>
              <li>
                <span class="li_1"><i class="level<%=value.rank%>"><%=value.rank%></i></span>
                <span class="li_2">
                  <%if(value.yY > 0){%>
                    <a href="http://www.huya.com/<%value.yY%>" target="_blank">
                      <span class="member">
                        <%if(value.logoUrl == ""){%>
                          <img src="../../hzlsTest2016/img/default.png">
                        <%}else{%>
                          <img src="<%value.logoUrl%>">
                        <%}%>
                        <%if(value.dead == 1){%>
                          <i class="dead"></i>
                        <%}else{%>
                          <%if(value.captain == 1){%>
                            <i class="leader"></i>
                          <%}%>
                        <%}%>
                      </span>
                      <span class="nick" title=<%=value.name%>><%=value.name%></span>
                      <i class="live"></i>
                    </a>
                  <%}else{%>
                    <span class="member">
                      <%if(value.logoUrl == ""){%>
                        <img src="../../hzlsTest2016/img/default.png">
                      <%}else{%>
                        <img src="<%=value.logoUrl%>">
                      <%}%>
                      <%if(value.dead == 1){%>
                        <i class="dead"></i>
                      <%}else{%>
                        <%if(value.captain == 1){%>
                          <i class="leader"></i>
                        <%}%>
                      <%}%>
                    </span>
                    <span class="nick" title=<%=value.name%>><%=value.name%></span>
                  <%}%>
                </span>
                <span class="li_3"><%=value.level%></span>
                <span class="li_4"><%=value.exp%></span>
                <span class="li_5">
                  <span><%=value.teamName%></span>
                </span>
              </li>
            <%}%>
          </ul>
          <!-- 榜单: 最强魔法师 -->
          <ul class="all_list" id="must_mfs">
            <%
              var data = data2.data;
              for(var i=0;i<data.warlockRankList.length;i++) {
                var value = data.warlockRankList[i];
            %>
              <li>
                <span class="li_1"><i class="level<%=value.rank%>"><%=value.rank%></i></span>
                <span class="li_2">
                  <%if(value.yY > 0){%>
                    <a href="http://www.huya.com/<%=value.yY%>" target="_blank">
                      <span class="member">
                        <%if(value.logoUrl == ""){%>
                          <img src="../../hzlsTest2016/img/default.png">
                        <%}else{%>
                          <img src="<%=value.logoUrl%>">
                        <%}%>
                        <%if(value.dead == 1){%>
                          <i class="dead"></i>
                        <%}else{%>
                          <%if(value.captain == 1){%>
                            <i class="leader"></i>
                          <%}%>
                        <%}%>
                      </span>
                      <span class="nick" title=<%=value.name%>><%=value.name%></span>
                      <i class="live"></i>
                    </a>
                  <%}else{%>
                    <span class="member">
                      <%if(value.logoUrl == ""){%>
                        <img src="../../hzlsTest2016/img/default.png">
                      <%}else{%>
                        <img src="<%=value.logoUrl%>">
                      <%}%>
                      <%if(value.dead == 1){%>
                        <i class="dead"></i>
                      <%}else{%>
                        <%if(value.captain == 1){%>
                          <i class="leader"></i>
                        <%}%>
                      <%}%>
                    </span>
                    <span class="nick" title=<%=value.name%>><%=value.name%></span>
                  <%}%>
                </span>
                <span class="li_3"><%=value.level%></span>
                <span class="li_4"><%=value.exp%></span>
                <span class="li_5">
                  <span><%=value.teamName%></span>
                </span>
              </li>
            <%}%>
          </ul>
          <!-- 榜单: 最强牧师 -->
          <ul class="all_list" id="must_ms">
            <%
              var data = data2.data;
              for(var i=0;i<data.priestRankList.length;i++) {
                var value = data.priestRankList[i];
            %>
              <li>
                <span class="li_1"><i class="level<%=value.rank%>"><%=value.rank%></i></span>
                <span class="li_2">
                  <%if(value.yY > 0){%>
                    <a href="http://www.huya.com/<%=value.yY%>" target="_blank">
                      <span class="member">
                        <%if(value.logoUrl == ""){%>
                          <img src="../../hzlsTest2016/img/default.png">
                        <%}else{%>
                          <img src="<%=value.logoUrl%>">
                        <%}%>
                        <%if(value.dead == 1){%>
                          <i class="dead"></i>
                        <%}else{%>
                          <%if(value.captain == 1){%>
                            <i class="leader"></i>
                          <%}%>
                        <%}%>
                      </span>
                      <span class="nick" title=<%=value.name%>><%=value.name%></span>
                      <i class="live"></i>
                    </a>
                  <%}else{%>
                    <span class="member">
                      <%if(value.logoUrl == ""){%>
                        <img src="../../hzlsTest2016/img/default.png">
                      <%}else{%>
                        <img src="<%=value.logoUrl%>">
                      <%}%>
                      <%if(value.dead == 1){%>
                        <i class="dead"></i>
                      <%}else{%>
                        <%if(value.captain == 1){%>
                          <i class="leader"></i>
                        <%}%>
                      <%}%>
                    </span>
                    <span class="nick" title=<%=value.name%>><%=value.name%></span>
                  <%}%>
                </span>
                <span class="li_3"><%=value.level%></span>
                <span class="li_4"><%=value.exp%></span>
                <span class="li_5">
                  <span><%=value.teamName%></span>
                </span>
              </li>
            <%}%>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- 三个头像 -->
  <div class="head_bg">
    <div class="head_inner">
      <%
        var data = data3.data,
          attackMost = data.killTop,
          failMost = data.teamTop,
          racerMost = data.lostTop;
      %>
      <div class="head_img attackMost">
        <img class="head_up" src="<%=attackMost.logoUrl == '' ? '../../hzlsTest2016/img/default.png' : attackMost.logoUrl%>" alt="">
        <img class="head_down" src="../../hzlsTest2016/img/head_1.png" alt="">
        <span title="<%=attackMost.name%>"><%=attackMost.name%></span>
      </div>
      <div class="head_img failMost">
        <img class="head_up" src="<%=failMost.logoUrl == '' ? '../../hzlsTest2016/img/default.png' : failMost.logoUrl%>" alt="">
        <img class="head_down" src="../../hzlsTest2016/img/head_2.png" alt="">
        <span title="<%=failMost.name%>"><%=failMost.name%></span>
      </div>
      <div class="head_img racerMost">
        <img class="head_up" src="<%=racerMost.logoUrl == '' ? '../../hzlsTest2016/img/default.png' : racerMost.logoUrl%>" alt="">
        <img class="head_down" src="../../hzlsTest2016/img/head_3.png" alt="">
        <span title="<%=racerMost.name%>"><%=racerMost.name%></span>
      </div>
    </div>
  </div>

  <!-- 活动规则 -->
  <div id="rule_bg">
    <div id="rlue_word">
      <a id="look_detail" href="javascript:void(0);"></a>
    </div>
  </div>


  <script id="teamResult" type="text/template">
  	<%- Helper.template('hzlsTest2016', 'template/tpl1') %>
  </script>

  <script src="../../hzlsTest2016/js/jquery.page.js"></script>
  <script src="../../hzlsTest2016/js/underscore.js"></script>
  <script src="../../hzlsTest2016/js/index.js"></script>
  <!-- footer -->
  <script src="http://assets.dwstatic.com/amkit/p/duya/live2/js/footer.js" data-fixed="true"></script>
</body>
</html>
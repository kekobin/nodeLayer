  <!-- 三个头像 -->
  <div class="head_bg">
    <div class="head_inner">
      <%
        var data = data3.data,
          attackMost = data.killTop,
          failMost = data.teamTop,
          racerMost = data.lostTop;
      %>
      <div class="head_img attackMost">
        <img class="head_up" src="<%=attackMost.logoUrl == '' ? '../hzls/img/default.png' : attackMost.logoUrl%>" alt="">

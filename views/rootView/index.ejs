  <!-- 我的战队弹窗 -->
  <div id="my_team_box" class="big_box">
    <div class="top">
      <div class="title">我的战队</div>
      <div class="close"></div>
    </div>
    <div class="main" id="my_team_result">
      
    </div>
    <script id="my_team_result_script" type="text/html">
      <div class="zhubo_nick">
        战队名称：<span class="nick_name">{{data.teamName}}</span>
        战绩：<span class="zhanji">{{data.score}}</span>
      </div>
      <div class="now_role">
        战队成员：<span class="role_name">{{data.memberList.length}}/3</span>
        排名：<span>{{data.rank}}</span>
        <span id="leader_hide">
          <a href="javascript:void(0);" id="dissolve" data-teamId={{data.teamId}}>解散战队</a>|
          <a href="javascript:void(0);" id="join_check" data-teamId={{data.teamId}}>入队审批</a>
          {{if data.inApplayNum > 0}}
            <i class="shenpi_i"></i>
          {{/if}}
        </span>
        <a href="javascript:void(0);" id="out_team" data-teamId={{data.teamId}}>退出战队</a>
      </div>
      <div class="team_member">
        <div class="team_top leader">
          <span>序号</span>
          <span>职位</span>
          <span class="team_nick_name">主播昵称</span>
          <span>角色</span>
          <span>等级</span>
          <span>属性</span>
          <span class="leader_span">操作</span>
        </div>
        <ul>
          {{each data.memberList as value i}}
          <li>
            <span>{{i+1}}</span>
            {{if value.uid == data.leaderUid}}
              <span>队长</span>
            {{else}}
              <span>队员</span>
            {{/if}}
            <span class="team_nick_name_img">
              {{if value.logoUrl == ""}}
                <img src="img/default.png" alt="">
              {{else}}
                <img src={{value.logoUrl}} alt="">
              {{/if}}
              <strong>{{value.name}}</strong>
            </span>
            {{if value.job == 1}}
              <span>投弹手</span>
            {{/if}}
            {{if value.job == 2}}
              <span>法师</span>
            {{/if}}
            {{if value.job == 3}}
              <span>牧师</span>
            {{/if}}
            <span>{{value.level}}</span>
            <span>{{value.allItem}}</span>
            <span class="leader_span">
              {{if value.uid == data.leaderUid}}
                <span>-</span>
              {{else}}
                <a class="ti_team" href="javascript:void(0);" data-teamId={{data.teamId}} data-koUid={{value.uid}}>踢出</a>
              {{/if}}
            </span>
          </li>
          {{/each}}
        </ul>
      </div>
    </script>
  </div>

